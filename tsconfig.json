{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@blog-images/*": [
                "src/assets/blog/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
        }
    }
}
