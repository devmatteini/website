{
    "name": "website",
    "author": "Cosimo Matteini <dev.matteini@gmail.com>",
    "version": "0.1.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "npm run cleanup && next dev",
        "build": "npm run cleanup && next build",
        "build:content": "contentlayer build --clearCache",
        "start": "next start",
        "lint": "eslint --ext .js,.ts,.tsx .",
        "format": "prettier -w .",
        "format:check": "prettier --check **/*.{js,ts,tsx}",
        "typecheck": "tsc --noEmit",
        "typecheck:w": "npm run typecheck -- --watch",
        "ci:setup-vercel": "vercel pull --yes --environment production --token \"$VERCEL_TOKEN\"",
        "ci:build": "vercel build --yes --prod --token \"$VERCEL_TOKEN\"",
        "ci:deploy": "vercel deploy --prebuilt --prod --token \"$VERCEL_TOKEN\"",
        "cleanup": "rm -rf .next"
    },
    "dependencies": {
        "next": "13.5.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "contentlayer": "0.3.4",
        "next-contentlayer": "0.3.4",
        "rehype-pretty-code": "0.10.2",
        "shiki": "0.14.5",
        "unist-util-visit": "5.0.0",
        "rehype-slug": "6.0.0",
        "rehype-autolink-headings": "7.1.0",
        "@vercel/analytics": "1.1.1",
        "clsx": "2.0.0",
        "tailwind-merge": "2.0.0",
        "reading-time": "1.5.0"
    },
    "devDependencies": {
        "@types/node": "18.19.0",
        "@types/react": "18.2.37",
        "@types/react-dom": "18.2.15",
        "prettier": "3.1.0",
        "eslint": "8.54.0",
        "eslint-config-next": "13.5.2",
        "eslint-config-prettier": "9.0.0",
        "@typescript-eslint/eslint-plugin": "6.11.0",
        "@typescript-eslint/parser": "6.11.0",
        "typescript": "5.2.2",
        "tailwindcss": "3.3.5",
        "postcss": "8.4.31",
        "autoprefixer": "10.4.16",
        "vercel": "32.5.5"
    },
    "engines": {
        "node": "18"
    }
}
