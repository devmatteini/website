{
    "name": "website",
    "author": "Cosimo Matteini <dev.matteini@gmail.com>",
    "version": "0.1.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "npm run cleanup && next dev",
        "build": "npm run cleanup && next build",
        "build:content": "contentlayer build --clearCache",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier -w .",
        "format:check": "prettier --check **/*.{js,ts,tsx}",
        "typecheck": "tsc --noEmit",
        "typecheck:w": "npm run typecheck -- --watch",
        "ci:setup-vercel": "vercel pull --yes --environment production --token \"$VERCEL_TOKEN\"",
        "ci:build": "vercel build --yes --prod --token \"$VERCEL_TOKEN\"",
        "ci:deploy": "vercel deploy --prebuilt --prod --token \"$VERCEL_TOKEN\"",
        "cleanup": "rm -rf .next"
    },
    "dependencies": {
        "next": "13.4.9",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "contentlayer": "0.3.4",
        "next-contentlayer": "0.3.4",
        "rehype-pretty-code": "0.10.0",
        "shiki": "0.14.3",
        "unist-util-visit": "5.0.0",
        "rehype-slug": "5.1.0",
        "rehype-autolink-headings": "6.1.1",
        "@vercel/analytics": "1.0.1",
        "clsx": "1.2.1",
        "tailwind-merge": "1.14.0"
    },
    "devDependencies": {
        "@types/node": "18.16.19",
        "@types/react": "18.2.14",
        "@types/react-dom": "18.2.7",
        "prettier": "2.8.8",
        "eslint": "8.44.0",
        "eslint-config-next": "13.4.9",
        "eslint-config-prettier": "8.8.0",
        "typescript": "4.9.5",
        "tailwindcss": "3.3.3",
        "postcss": "8.4.26",
        "autoprefixer": "10.4.14",
        "vercel": "31.0.3"
    },
    "engines": {
        "node": "18"
    }
}
