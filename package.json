{
  "name": "website",
  "author": "Cosimo Matteini <dev.matteini@gmail.com>",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npm run cleanup:dev && next dev",
    "build": "npm run cleanup && next build",
    "build:content": "contentlayer build --clearCache",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "format:check": "prettier --check **/*.{js,ts,tsx}",
    "typecheck": "tsc --noEmit",
    "typecheck:w": "npm run typecheck -- --watch",
    "cleanup": "rm -rf .next",
    "cleanup:dev": "rm -rf .next .contentlayer"
  },
  "dependencies": {
    "next": "13.1.1",
    "@next/font": "13.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "contentlayer": "0.2.9",
    "next-contentlayer": "0.2.9",
    "rehype-pretty-code": "0.7.0",
    "shiki": "0.12.1",
    "rehype-slug": "5.1.0",
    "rehype-autolink-headings": "6.1.1"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "prettier": "2.8.2",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "eslint-config-prettier": "8.6.0",
    "typescript": "4.9.4",
    "tailwindcss": "3.2.4",
    "postcss": "8.4.21",
    "autoprefixer": "10.4.13"
  }
}
