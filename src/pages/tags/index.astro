---
import Document from "@layouts/Document.astro"
import { publishedTags } from "@shared/tags"
import { cn } from "@shared/cn"
import Link from "@components/Link.astro"

const tags = await publishedTags()
---

<Document
    metadata={{
        title: "Tags",
        description: "Tags",
    }}
>
    <h1 class="font-bold mb-5">Tags</h1>
    <div class="mb-5 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 justify-center gap-3">
        {
            tags.map((tag) => (
                <Link
                    href={tag.url}
                    class={cn({
                        "text-base": tag.entries.length <= 5,
                        "text-lg": tag.entries.length >= 6 && tag.entries.length <= 10,
                        "text-xl": tag.entries.length >= 11 && tag.entries.length <= 20,
                        "text-2xl": tag.entries.length >= 21,
                    })}
                >
                    {tag.name}
                </Link>
            ))
        }
    </div>
</Document>
