---
import Link from "./Link.astro"
import Container from "./Container.astro"
import DesktopMenu from "./menu/DesktopMenu.astro"
import MobileMenu from "./menu/MobileMenu.astro"
import MobileMenuContent from "./menu/MobileMenuContent.astro"
---

<nav class="mt-8">
    <Container>
        <div class="flex items-center justify-between mb-4">
            <h1 class={"my-0 font-bold text-xl"}>
                <Link href="/" class={"flex items-center"}>
                    <img
                        class={"rounded-full mr-3 w-12 h-12"}
                        src="/profile.webp"
                        alt=""
                        width="80"
                        height="80"
                    />
                    Cosimo Matteini
                </Link>
            </h1>

            <div class="md:hidden">
                <MobileMenu />
            </div>
            <div class="hidden md:block">
                <DesktopMenu />
            </div>
        </div>
        <MobileMenuContent />
    </Container>
</nav>
