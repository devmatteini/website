---
import Container from "./Container.astro"
import ExternalLink from "./ExternalLink.astro"
import { Icon } from "astro-icon/components"
import Link from "./Link.astro"
import { iconSize } from "@shared/icon"
---

<footer class="bg-blackSand-600 py-4">
    <Container>
        <div class="flex flex-col sm:flex-row sm:justify-between gap-3">
            <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                <Link class="text-xl" href="/"> /home</Link>
                <Link class="text-xl" href="/privacy"> /privacy</Link>
            </div>
            <div class="flex gap-4">
                <Link href="/rss.xml" aria-label="Subscribe via RSS Feed">
                    <Icon name="rss" size={iconSize.lg} />
                </Link>
                <ExternalLink href="https://github.com/devmatteini/" ariaLabel="GitHub">
                    <Icon name="github" size={iconSize.lg} />
                </ExternalLink>
                <ExternalLink
                    href="https://bsky.app/profile/cosimomatteini.com"
                    ariaLabel="Bluesky"
                >
                    <Icon name="bluesky" size={iconSize.lg} />
                </ExternalLink>
                <ExternalLink href="https://hachyderm.io/@cosimomatteini" ariaLabel="Mastodon">
                    <Icon name="mastodon" size={iconSize.lg} />
                </ExternalLink>
                <ExternalLink
                    href="https://www.linkedin.com/in/cosimo-matteini-138a22188"
                    ariaLabel="Linkedin"
                >
                    <Icon name="linkedin" size={iconSize.lg} />
                </ExternalLink>
                <ExternalLink href="https://twitter.com/MatteiniCosimo" ariaLabel="Twitter">
                    <Icon name="twitter" size={iconSize.lg} />
                </ExternalLink>
            </div>
        </div>
        <p class="mt-3 mb-0 sm:text-center">
            &copy;{new Date().getFullYear()}
            <Link href="/">Cosimo Matteini</Link>
        </p>
    </Container>
</footer>
