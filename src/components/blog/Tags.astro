---
import type { Post } from "@shared/blog"
import { tagUrl } from "@shared/tags"
import Link from "@components/Link.astro"

type Props = { tags: Post["data"]["tags"] }

const { tags } = Astro.props
---

{
    tags.length > 0 && (
        <div class="flex gap-2 items-center">
            {tags.map((x) => (
                <span class="text-sm py-1 px-2 rounded-md font-bold bg-white text-blackSand-500">
                    <Link href={tagUrl(x)}>{x}</Link>
                </span>
            ))}
        </div>
    )
}
