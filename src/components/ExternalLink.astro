---
import Link, { type Variant } from "./Link.astro"

type Props = {
    href: string
    variant?: Variant
    ariaLabel?: string
    className?: string
}

const { variant, href, ariaLabel, className } = Astro.props
---

<Link
    href={href}
    variant={variant}
    class={className}
    target="_blank"
    rel="noreferrer"
    aria-label={ariaLabel}
>
    <slot />
</Link>
